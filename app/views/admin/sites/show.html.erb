<div class="page-header">
  <h1>Show Site</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Name:</strong></dt>
  <dd><%= @site.name %></dd>
</dl>

<dl class="dl-horizontal">
  <dt><strong>URL:</strong></dt>
  <dd><%= @site.url %></dd>
</dl>

<dl class="dl-horizontal">
  <dt><strong>Big Category:</strong></dt>
  <dd><%= big_category_name(@site.big_category_id) %></dd>
</dl>

<dl class="dl-horizontal">
  <dt><strong>Small Category:</strong></dt>
  <dd><%= small_category_name(@site.small_category_id) %></dd>
</dl>

<%= link_to "Back", admin_sites_path, :class => 'btn btn-default'  %>
<%= link_to "Edit", edit_admin_site_path(@site), :class => 'btn btn-default' %>
<%= link_to "Delete", admin_site_path(@site),
              :method => 'delete',
              :data => { :confirm => 'Are you sure?' },
              :class => 'btn btn-danger' %>